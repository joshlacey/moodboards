<%= @project.title %><br>
<%= @project.description %><br>	
Users: <% @project.users.each do |user| %>
	<%= link_to "#{user.full_name}", user_path(user) %>
	<% end %>
	<br>
<%= link_to "Edit this project", edit_project_path(@project) %><br>
<%= link_to "All Projects", projects_path %>

<h3>Boards</h3>
<% if !@project.boards.empty? %>
	<% @project.boards.each do |board| %>
		<%= link_to "#{board.title}", board_path(board) %><br>
		# of images - <%= board.images.count %><br>
	<% end %>
	<% else %>
	<%= "This project does not currently have any associated boards." %>
<% end %>
<br>
<br>
<%= link_to "Add a board to this project", new_board_path %>