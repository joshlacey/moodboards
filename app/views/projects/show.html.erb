<div class="floating_box">

	<h2 style="color: white;">Boards</h2>
		<% @project.boards.each do |board| %>
			<div class="button_link">
				<%= link_to "#{board.title}", board_path(board) %>
			</div>
		<% end %>
			<div class="button_link">
				<%= link_to "Add New Board", new_board_path %>
			</div>
			<div class="button_link">
				<%= link_to "Edit this project", edit_project_path(@project) %>
			</div>

			<!-- <div class="button_link" style="background-color: green;">
				<%= link_to "Approve Project", approve_project_path, :project_id => @project.id %>
			</div> -->
			<% if current_user.admin? %>
				<%= form_tag approve_project_path do %>
					<%= hidden_field_tag 'project_id', @project.id %>
					<%= submit_tag "Approve Project", class: "button_approve_reject", style: "background-color: green;" %> <% end %>
				<%= form_tag reject_project_path do %>
					<%= hidden_field_tag 'project_id', @project.id %>
					<%= submit_tag "Reject Project", :class => "button_approve_reject", style: "background-color: red;"%><% end %>
			<% end %>
</div>


<div class="ui container fix">

	<div class="project-name-show">
			<%= @project.title %>
	</div>
		<br>
	<div class="project-descrip-show">
		<%= @project.description %>
		<br>
	</div>

		<div class="masonry" style="margin-top: 30px;">
			<% @project.images.each do |image| %>
				<div class="item_brick">


											<%= link_to image_tag(image.file_for), image_path(image), class: "ui fluid image" %>


				</div>
			<% end %>
		</div>

	<br><br>
			<div class="ui two column grid">
				<div class="column" style="height: 200px;">
					<%= form_tag '/comments', method: 'post' do %>
						<div class="ui form">
							<div class="field">
								<%= hidden_field_tag 'comment[project_id]', @project.id %>
								<%= text_area_tag 'comment[content]' %>
							</div>
						</div>
					<%= submit_tag "Add a comment" %>
					<% end %>
				</div>
				<div class="column" style="height: 200px;">
					<span class="title"> Comments For This Project </span>
					<div style="overflow-y:scroll; height: 150px;">
						<% if @project.comments %>
							<% @project.comments.each do |comment| %>
								<p><%= "#{comment.user.full_name}: #{comment.content}" %></p>
								<hr class="line">
							<% end %>
						<% end %>
					</div>
			</div>
			</div>

</div>
<div class="footer">
<span style="color: white; font-weight: bold;">Contributors</span> <% @project.users.each do |user| %>
						<span style="padding-left: 20px;"><%= link_to "#{user.full_name}", user_path(user) %></span>
					<% end %>
				</div>
