<div class="ui container fix">

<% if current_user.admin? %>
<span style="float: left;">
	<%= form_tag approve_project_path do %>
		<%= hidden_field_tag 'project_id', @project.id %>
		<%= submit_tag "Approve Project", data: {confirm: 'Are you sure you want to approve this project?'}, :class => "ui button green" %>
		<% end %>
		</span>
<span style="float: left; clear: right;">
	<%= form_tag reject_project_path do %>
		<%= hidden_field_tag 'project_id', @project.id %>
		<%= submit_tag "Reject Project", data: {confirm: 'Are you sure you want to reject this project?'}, :class => "ui button red" %>
		<% end %>
		</span>
	<% end %>

	<div class="project-name-show">
			<%= @project.title %>
	</div>
		<br>
	<div class="project-descrip-show">
		<%= @project.description %>
		<br>
	</div>

		<div class="masonry" style="margin-top: 30px;">
			<% @project.images.each do |image| %>
				<div class="item_brick">


											<%= link_to image_tag(image.file_for), image_path(image), class: "ui fluid image" %>


				</div>
			<% end %>
		</div>

	<br><br>
			<div class="ui two column grid">
				<div class="column" style="height: 200px;">
					<%= form_tag '/comments', method: 'post' do %>
						<div class="ui form">
							<div class="field">
								<%= hidden_field_tag 'comment[project_id]', @project.id %>
								<%= text_area_tag 'comment[content]' %>
							</div>
						</div>
					<%= submit_tag "Add a comment" %>
					<% end %>
				</div>
				<div class="column" style="height: 200px;">
					<span class="title"> Comments For This Project </span>
					<div style="overflow-y:scroll; height: 150px;">
						<% if @project.comments %>
							<% @project.comments.each do |comment| %>
								<p><%= "#{comment.user.full_name}: #{comment.content}" %></p>
								<hr class="line">
							<% end %>
						<% end %>
					</div>
			</div>
			</div>

</div>
<div class="footer">
<span style="color: white; font-weight: bold;">Contributors</span> <% @project.users.each do |user| %>
						<span style="padding-left: 20px;"><%= link_to "#{user.full_name}", user_path(user) %></span>
					<% end %>
				</div>
