<div class="container flex padded-container" style="padding-top: 60px; height: 100%;">
	<div style="display: inline-block; width: 20%; height: 600px; background-color: black;" >
		<div style="color: white;">
			<p style="font-size: 3vw;"><%= @user.full_name %></p>
		</div>
		<div style="font-size: 1vw; color: white; font-weight: light; margin-left: 5px; height: 100%; ">
		<%= @user.email %><br><br>
		</div>
	</div>


	<div style="display: inline-block; width: 75%; border-left: 2px solid white; height: 100%;">
		<div style="padding-left: 20px;"><h2 >Projects</h2></div>
		<% if @projects %>
			<% @projects.each do |project| %>
					<%= link_to "#{project.title}", project_path(project), style: "position: absolute; right: 80px; padding-top: 15px; font-size: 20px; white-space: nowrap;" %>
					<div style="padding-top: 30px;">
					<hr>
					<div style="padding-left: 10%;">
					<% project.images.sample(5).each do |image| %>
						<%= image_tag image.file_for, class: "ui small image thumbnail-image user-show-image", style: "background-color: white; margin-left: 10px;" %>
						<% end %>
					</div>
				</div>
			<% end %>
		<% else %>
			<%= "#{@user.first_name} doesn't currently have any projects." %>
		<% end %>
	</div>

</div>
