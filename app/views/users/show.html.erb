<div class="container padded-container">

	<div class="user-info-box">
		<div class="title-name" style="color: white;">
			<%= @user.full_name %><br><br>
		</div>
		<div class="user-email" style="color: white;">
		<%= link_to @user.email, email_user_path(@user) %><br><br>
		</div>
	</div>

	<div class="projects ui grid">
		<h2 id="project-title">Projects</h2>
			<div class="four wide column"></div>
		<% if @projects %>
			<% @projects.each do |project| %>
				<div class="ten wide column shift-right" style="margin-top: 10px;">
					<%= link_to "#{project.title}", project_path(project) %><br><br>
					<hr>
					<% project.images.sample(6).each do |image| %>
						<%= image_tag image.file_for, class: "ui small image thumbnail-image user-show-image", style: "background-color: white; margin-left: 10px;" %>
						<% end %>
				</div>
			<% end %>
		<% else %>
			<%= "#{@user.first_name} doesn't currently have any projects." %>
		<% end %>
	</div>

</div>
