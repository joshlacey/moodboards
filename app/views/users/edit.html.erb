<div class="ui container fix">
	<div class="form new-user">
		<%= form_for @user do |f| %>

			<%= f.label :first_name %><br>
			<%= f.text_field :first_name %><br><br>

			<%= f.label :last_name %><br>
			<%= f.text_field :last_name %><br><br>

			<%= f.label :email %><br>
			<%= f.text_field :email %><br><br>

			<% if current_user.admin? %>
				<%= f.label :admin, "Are you an administrator?"%>&nbsp;&nbsp;
				<%= f.check_box :admin %><br><br>
			<% end %>

			<%= f.submit :class => "ui button" %>

		<% end %>
	</div>
</div>