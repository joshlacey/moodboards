<div class="ui container fix">
	<% if flash[:message] %>
		<%= flash[:message] %>
		<br>
		<br>
	<% end %>
	
	<%= form_tag login_path, id: "login", class: "form" do %>
		<div>
			<label>Email:</label>
			<%= text_field_tag 'user[email]' %>
		</div>
		<div>
			<label>Password:</label>
			<%= password_field_tag 'user[password]' %>
		</div>
		<div>
			<%= submit_tag "Log In", class: "ui secondary button" %>
		</div>
	<% end %>
<br><br><br>
<h1 class="flashing", style="font-size:8em; text-align: center; margin-bottom: 0px;">MOODBOARDS</h1>
<h4 class="flashing", style="font-size:3em; text-align: right; margin-right: 15%; margin-top: 0px;">Inc.</h4>

</div>
