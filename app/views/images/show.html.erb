<div class="container">
<%= image_tag @image.url %><br>
Uploaded by: <%= link_to "#{@image.user.full_name}", user_path(@image.user) %><br>
Assocated with: <%= link_to "#{@image.board.title}", board_path(@image.board) %><br>

<%= form_tag '/comments', method: 'post' do %>
	<%= hidden_field_tag 'comment[image_id]', @image.id %>
	<%= text_area_tag 'comment[content]' %>
	<%= submit_tag "Add a comment" %>
<% end %>

<% if @image.comments %>
	<% @image.comments.each do |comment| %>
		<p><%= "#{comment.content}" %></p>
	<% end %>
<% end %>


</div>

